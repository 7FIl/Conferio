# Conference Management System - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# =====================================================
# JWT Configuration
# =====================================================
# Generate a secure secret using: openssl rand -base64 32
JWT_SECRET=your-secure-jwt-secret-here-change-this

# =====================================================
# Database Configuration
# =====================================================
# PostgreSQL connection URL
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/conference_db

# Database username (create this user first)
SPRING_DATASOURCE_USERNAME=app_user

# Database password (generate a secure password)
SPRING_DATASOURCE_PASSWORD=your-secure-database-password-here

# =====================================================
# Server Configuration
# =====================================================
# Application port
SERVER_PORT=8080

# Profile: dev (development) or prod (production)
SPRING_PROFILES_ACTIVE=dev

# =====================================================
# Optional: For Production Only
# =====================================================
# SPRING_PROFILES_ACTIVE=prod
# HTTPS configuration (if using self-signed cert)
# SERVER_SSL_KEY_STORE_PATH=path/to/keystore.p12
# SERVER_SSL_KEY_STORE_PASSWORD=keystore-password
