spring.application.name=management-system

# Server Configuration
server.port=8080

# Database Configuration - PostgreSQL
spring.datasource.url=jdbc:postgresql://localhost:5432/conference_db
spring.datasource.username=postgres
spring.datasource.password=YOUR_POSTGRES_PASSWORD_HERE
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect

# JWT Configuration
# IMPORTANT: Generate your own 256-bit Base64-encoded secret key!
# Command: openssl rand -base64 32
jwt.secret=YOUR_256_BIT_BASE64_JWT_SECRET_HERE
jwt.expiration=86400000

# Logging
logging.level.org.springframework.security=INFO
logging.level.com.conference.management_system=INFO

# Swagger/OpenAPI Configuration
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.enabled=true

# Optional: Production settings (uncomment to use)
# spring.jpa.show-sql=false
